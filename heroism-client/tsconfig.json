{
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "module": "es2015",
        "target": "es2015",
        "baseUrl": "./",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "jsx": "react",
        "jsxFactory": "h",
        "lib": [
            "es2017",
            "dom",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
        ],
        "plugins": [
            {
                "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
                "after": true
            }
        ]
    }
}